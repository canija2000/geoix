

<section class="container mt-5">
  <div class="row">
    <h2 class=" ms-4 text-center pb-4 ">{{name}}</h2>
    <hr class="m-auto col-8 ">
     <div class="p-5" style="text-align:justify">{{description}}

</div>
  </div>
</section>

<div class="container  p-5">
  <h2 class="text-start pb-4">Indicators</h2>
  <div class="accordion accordion-flush" id="accordionFlushExample">
    {{#each indicators}}
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#{{id}}" aria-expanded="false" aria-controls="flush-collapseOne">
        {{name}}
      </button>
    </h2>
    <div id="{{id}}" class="accordion-collapse collapse">
      <div class="accordion-body">{{description}} </div>
    </div>
  </div>
  {{/each}}
</div>

</div>
    
<div class="container  p-5">

  <img src="{{img}}" class="img-fluid" alt="...">
</div>
    
  </div>
